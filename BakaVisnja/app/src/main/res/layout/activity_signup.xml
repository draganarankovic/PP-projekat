<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3C6A9"
    tools:context=".MainActivity"
    tools:ignore="missingConstraints" >

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Региструј се"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#E85265"
        android:fontFamily="sans-serif-black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/screenshot_2024_04_10_181024"
        android:scaleType="fitCenter"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"/>

    <EditText
        android:id="@+id/маи"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Мејл адреса"
        android:textColorHint="#FFEA6879"
        android:textColor="#E85265"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/TextInputEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Корисничко име"
        android:textColorHint="#FFEA6879"
        android:textColor="#E85265"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Шифра"
        android:textColor="#E85265"
        android:textColorHint="#EA6879"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/border_shape"
        android:hint="Поновите шифру"
        android:textColor="#E85265"
        android:textColorHint="#EA6879"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/round_btn"
        android:text="Региструј се"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:radius="30dp"/>

    <TextView
        android:id="@+id/textViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Већ имате налог? "
        android:textColor="#000000"
        android:layout_below="@id/buttonLogin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Региструјте се"
        android:textColor="#E85265"
        android:layout_below="@id/buttonLogin"
        android:layout_toEndOf="@id/textViewRegister"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>
    />




</RelativeLayout>
